@page "/MyConverter"
@inject TemperatureConversionService ConversionService

<h3>Temperature Converter</h3>

<div>
    <input type="number" @bind="inputValue" placeholder="Enter value"/>
    <select @bind="conversionType">
        <option value="FtoC">Fahrenheit to Celsius</option>
        <option value="CtoF">Celsius to Fahrenheit</option>
    </select>
    <button @onclick="ConvertTemperature">Convert</button>
</div>

@if (result != null)
{
    <p>Result: @result</p>
}

@code {
    private decimal inputValue;
    private string conversionType = "FtoC";
    private string result;

    private void ConvertTemperature()
    {
        result = conversionType switch
        {
            "FtoC" => $"{ConversionService.FahrenheitToCelsius(inputValue)} °C",
            "CtoF" => $"{ConversionService.CelsiusToFahrenheit(inputValue)} °F",
            _ => "Invalid conversion type"
        };
    }

}